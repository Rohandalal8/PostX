<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Post</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>

<body class="bg-black bg-gradient" style="min-height: 100vh;">
    <nav class="navbar navbar-expand-lg bg-dark border-bottom border-body" data-bs-theme="dark">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">PostScape</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false"
                aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="/">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/user/posts">Your Posts</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/post/create">Create Posts</a>
                    </li>
                </ul>
                <a href="/login"> <button class="btn btn-outline-danger mb-0">Logout</button></a>
            </div>
        </div>
    </nav>
    <div class="container-fluid">
        <div class="container">
            <div class="row px-2 flex-column gap-3 mt-3">
                <% posts.reverse().forEach((post)=> { %>
                    <div class="col-12 col-lg-5 border-secondary rounded p-3 bg-black text-white">
                        <div class="d-flex align-items-center justify-content-between mb-2">
                            <p class="text-info lh-1 mb-0">@<%= post.user.username %>
                            </p>
                            <small class="text-secondary mb-0">
                                <%= moment(post.date).fromNow() %>
                            </small>
                        </div>
                        <p class="text-break">
                            <%= post.content%>
                        </p>
                        <small class="d-block">
                            <%= post.likes.length %> likes
                        </small>
                        <a href="/like/<%= post._id %>" class="text-decoration-none me-4">
                            <%= post.likes.indexOf(user._id)===-1 ? "Like" : "Unlike" %>
                        </a>
                    </div>
                    <% }) %>
            </div>
        </div>
    </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
        crossorigin="anonymous"></script>
</body>

</html>